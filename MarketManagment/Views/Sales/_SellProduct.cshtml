@model Product


@if (Model != null)
{
        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Name" class="form-control" readonly />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="Price" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Price" class="form-control" value="@(string.Format("{0:c}", Model.Price))" readonly />
            </div>
        </div>

}